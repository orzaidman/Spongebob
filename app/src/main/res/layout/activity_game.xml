<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_RELATIVE"
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/spongebob_background"
    >

    <ImageView
        android:id="@+id/game_IMG_heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/heart_new"
        />

    <ImageView
        android:id="@+id/game_IMG_heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/game_IMG_heart1"
        app:srcCompat="@drawable/heart_new" />

    <ImageView
        android:id="@+id/game_IMG_heart3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/game_IMG_heart2"
        app:srcCompat="@drawable/heart_new" />

    <TextView
        android:id="@+id/game_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/game_IMG_heart3"
        android:text="SCORE: "
        android:layout_margin="4dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textSize="20dp" />

    <Button
        android:id="@+id/game_BTN_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pause_new" />

    <Button
        android:id="@+id/game_BTN_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/game_BTN_pause"
        android:background="@drawable/close" />

    <GridLayout
        android:id="@+id/game_GRIG"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_above="@id/game_BTN_right"
        android:layout_below="@id/game_IMG_heart1"
        android:columnCount="3"
        android:rowCount="6"
        android:layout_centerInParent="true"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/game_IMG_asteroid1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid3"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />


        <ImageView
            android:id="@+id/game_IMG_asteroid14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_asteroid15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/jellyfish" />

        <ImageView
            android:id="@+id/game_IMG_player1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/spongebob" />

        <ImageView
            android:id="@+id/game_IMG_player2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/spongebob" />

        <ImageView
            android:id="@+id/game_IMG_player3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/spongebob" />


    </GridLayout>

    <Button
        android:id="@+id/game_BTN_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/game_GRIG"
        android:background="@drawable/left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/game_BTN_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/right" />

</RelativeLayout>