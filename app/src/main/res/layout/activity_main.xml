<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/spongebob_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_IMG_title"
        android:layout_width="374dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title" />

    <Button
        android:id="@+id/main_BTN_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_IMG_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="50dp" />

    <Button
        android:id="@+id/main_BTN_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_BTN_start"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="50dp" />


    <TextView
        android:id="@+id/MAIN_LBL_BYE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:layout_below="@id/main_BTN_exit"
        android:textColor="#FFFFFF"
        android:textSize="80dp" />


        <ImageView
            android:id="@+id/main_IMG_player1"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/first" />

        <ImageView
            android:id="@+id/main_IMG_player2"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/main_IMG_player1"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/one" />

        <ImageView
            android:id="@+id/main_IMG_player3"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_toRightOf="@id/main_IMG_player2"
            app:srcCompat="@drawable/two" />

        <ImageView
            android:id="@+id/main_IMG_player4"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/main_IMG_player3"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/three" />

    <Switch
        android:id="@+id/main_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Sound"
        android:textOff="OFF"
        android:textOn="ON"
      />




</RelativeLayout>