<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/img_spongebob_background"
    tools:context=".Settings">


    <TextView
        android:id="@+id/setting_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        />

    <TextView
        android:id="@+id/setting_LBL_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/setting_LBL_title"
        android:layout_marginTop="70dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

    <Switch
        android:id="@+id/setting_SWITCH_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/setting_LBL_sound"
        android:layout_below="@+id/setting_LBL_title"
        android:layout_marginTop="80dp"
        android:checked="true"
        android:layout_marginLeft="20dp"
        android:textOff="OFF"
        android:textOn="ON"
        />




    <TextView
        android:id="@+id/setting_LBL_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buttons"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/setting_LBL_sound"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>


    <Switch
        android:id="@+id/main_SWITCH_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_LBL_sound"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/setting_LBL_buttons"
        android:checked="true"
        android:textOff="OFF"
        android:textOn="ON" />

    <Button
        android:id="@+id/setting_BTN_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_marginTop="55dp"
        android:textSize="50dp"
        android:layout_below="@id/setting_LBL_buttons"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/img_setting"
        android:layout_below="@id/setting_BTN_main"
        android:layout_marginTop="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>